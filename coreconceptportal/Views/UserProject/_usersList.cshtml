    </div>
    <div class="ms-panel-body" >
        <div class="row">
            <div class="col-md-4" id="notAssoUsers">
                <h6 class="section-title">Funcionários não envolvidos</h6>
                <ul class="ms-list ms-sortable-list ui-sortable">
                    @foreach (var user in Model.usersNonAssociated)
                    {
                        <li value="@user.UserId" class="ms-list-item bordered media">
                            <i class="far fa-user"></i>
                            <div class="media-body">
                                <h5>@user.Name</h5>
                            </div>
                        </li>
                    }

                </ul>
            </div>
            <div class="col-md-8" id="assoUsers">
                <h6 class="section-title">Funcionários Envolvidos no Projeto</h6>
                <ul class="ms-list ms-droppable ms-sortable-list ui-sortable">
                    @foreach (var user in Model.usersAssociated)
                    {
                        <li value="@user.UserId" class="ms-list-item bordered media">
                            <i class="far fa-user"></i>
                            <div class="media-body">
                                <h5>@user.Name</h5>
                            </div>
                        </li>

                    }
                </ul>
            </div>

        </div>
    </div>
</div>



    
